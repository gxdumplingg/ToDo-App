<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/dark_gray</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="materialCalendarTheme">@style/CalendarTheme</item>
    </style>

    <!-- Custom Calendar Theme -->
    <style name="CalendarTheme" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="CustomTitleHintStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">#8A8A8A</item>
    </style>

    <style name="CustomContentHintStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#8A8A8A</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:icon">@drawable/ic_search</item>
    </style>
</resources>