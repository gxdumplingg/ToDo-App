<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/dark_gray</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="materialCalendarTheme">@style/CalendarTheme</item>
    </style>


    <style name="CalendarTheme" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="CustomTitleHintStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">#8A8A8A</item>
    </style>

    <style name="TaskTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="TaskTextView.Selected" parent="TaskTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selected_task_background</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_dropdown</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>